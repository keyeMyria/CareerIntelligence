<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.altitude.careerintelligence">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.altitude.careerintelligence.classes.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.altitude.careerintelligence.Splashscreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="co.paystack.android.PublicKey"
            android:value="pk_test_43f8936830aea3a5b9838c4893b16c9f1e7dee34" />

        <activity
            android:name="com.altitude.careerintelligence.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.altitude.careerintelligence.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.altitude.careerintelligence.mcc.MCCDashboard"
            android:parentActivityName="com.altitude.careerintelligence.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MCCDashboard" />
        <activity
            android:name="com.altitude.careerintelligence.RecyclerViewRadio"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.altitude.careerintelligence.mcc.MCCPayment"
            android:parentActivityName="com.altitude.careerintelligence.mcc.MCCDashboard"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MCCDashboard" />
        <activity android:name="com.altitude.careerintelligence.mcc.PaymentWebview" />
        <activity
            android:name="com.altitude.careerintelligence.SignupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.altitude.careerintelligence.mcc.BottomNav"
            android:label="@string/title_activity_bottom_nav" />
        <activity
            android:name="com.altitude.careerintelligence.mcc.MCCPaymentSuccess"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MCCDashboard" />
        <activity
            android:name="com.altitude.careerintelligence.mcc.CareerNews"
            android:parentActivityName="com.altitude.careerintelligence.mcc.MCCDashboard"
            android:theme="@style/AppTheme.MCCDashboard" />
        <activity android:name="com.altitude.careerintelligence.StripePay"></activity>
    </application>

</manifest>