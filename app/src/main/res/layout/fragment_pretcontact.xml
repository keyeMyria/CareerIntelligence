                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#888"
                        android:text="info@pretglobal.com"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
